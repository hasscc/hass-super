#! /bin/sh

set -x

case $(uname -m) in
    "aarch64" | "arm64") export MACHINE=${MACHINE:=qemuarm-64} ;;
    "armv6l" | "armv7l") export MACHINE=${MACHINE:=qemuarm} ;;
esac

xargs -0 -n1 < /proc/1/environ | sed "s/=\(.*\)/='\1'/" | while read line; do
    export "$line"
done
env >> /tmp/hassio.log

mount --make-shared "${DATA_SHARE:=/usr/share/hassio}"

deb="/opt/hassio.deb"
if [ $(cat /etc/timezone) = "Asia/Shanghai" ]; then
    deb="/opt/hasscn.deb"
fi
dpkg --force-confdef --force-confold -i $deb

CHECK_TIMES=1
while [ "$CHECK_TIMES" -le "5" ]; do
  sleep 10
  status=$(docker inspect -f '{{.State.Running}}' homeassistant 2>/dev/null)
  if [ "$status" = "true" ]; then
    date "+%Y-%m-%d %H:%M:%S" >> /tmp/hassio.log
    exit 0
  fi
  ha core start >> /tmp/hassio.log 2>&1
  CHECK_TIMES=$((CHECK_TIMES + 1))
done
