#! /bin/sh

# fix for Synology
sed -i "s/ProtectSystem=true/ProtectSystem=no/" /lib/systemd/system/NetworkManager.service
sed -i "s/PrivateTmp=yes/PrivateTmp=no/" /lib/systemd/system/systemd-resolved.service
sed -i "s/ProtectHome=yes/ProtectHome=no/" /lib/systemd/system/systemd-resolved.service
sed -i "s/ProtectClock=yes/ProtectClock=no/" /lib/systemd/system/systemd-resolved.service
sed -i "s/ProtectSystem=strict/ProtectSystem=no/" /lib/systemd/system/systemd-resolved.service
sed -i "s/ProtectKernelLogs=yes/ProtectKernelLogs=no/" /lib/systemd/system/systemd-resolved.service
sed -i "s/ProtectKernelModules=yes/ProtectKernelModules=no/" /lib/systemd/system/systemd-resolved.service
systemctl mask systemd-logind systemd-hostnamed systemd-tmpfiles-setup e2scrub_reap
systemctl enable post-init

echo btrfs > /etc/docker-driver